    <script type="text/javascript">
        var send = function(id){
            var id = id;
            $.ajax({
              method: "get",
              url: "/student/followrequest?id="+id
            }).done(function( msg ) {
                    if(msg === 'done'){
                        var element = document.getElementById(id+"send");
                        element.innerHTML = "Requested";
                        element.disabled = true;
                    }                 
            });    
        }
    </script>
